<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/shape_button_rounded_corners_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">@dimen/buttonPrimaryPaddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/buttonPrimaryPaddingHorizontal</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
    </style>

    <dimen name="buttonPrimaryPaddingHorizontal">50dp</dimen>
</resources>
